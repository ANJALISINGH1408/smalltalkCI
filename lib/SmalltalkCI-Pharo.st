SmalltalkCI subclass: #SmalltalkCIPharo	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'SmalltalkCI-Pharo'!!SmalltalkCIPharo methodsFor: 'private' stamp: 'travisCI 1/27/2016 17:08'!installSTON	"If Pharo < 5, STON needs to be installed"	Metacello new      	configuration: 'STON';      	version: #stable;      	repository: 'http://ss3.gemstone.com/ss/STON';      	load! !!SmalltalkCIPharo methodsFor: 'private' stamp: 'travisCI 1/27/2016 17:03'!testRunnner 	^ self class isHeadless 		ifTrue: [ CommandLineTestRunner ]		ifFalse: [ HDTestReport ]		! !!SmalltalkCIPharo methodsFor: 'private' stamp: 'travisCI 1/27/2016 17:07'!installDependencies	"Pharo 3+ has all dependences pre-installed"	self flag: #todo. "Maybe we need to update Metacello? (if Pharo < 5)"	! !!SmalltalkCIPharo methodsFor: 'private' stamp: 'EstebanLorenzano 1/26/2016 16:24'!readSTONSpec: aFilename	| reference |	reference := aFilename asFileReference.	projectDirectory := reference parent fullName.	spec :=  reference readStreamDo: [ :stream | 		SmalltalkCISpec fromStream: stream ]! !!SmalltalkCIPharo methodsFor: 'executing' stamp: 'travisCI 1/27/2016 17:01'!runTests	self testRunnner 		runClasses: self classesToTest 		named: 'smalltalkCI'! !!SmalltalkCIPharo methodsFor: 'accessing' stamp: 'EatebanLorenzano 1/27/2016 13:08'!classesToTestFrom: aDictionary	| classes |	classes := super classesToTestFrom: aDictionary.					aDictionary 		at: #packages 		ifPresent: [ :packagesList | | packages commandLineHandler |			packages := Set new.			commandLineHandler := TestCommandLineHandler new.			packagesList do: [ :each | 				commandLineHandler addPackagesMatching: each to: packages ].			packages do: [ :each | 				classes addAll: (RPackageOrganizer default packageNamed: each) definedClasses ] ].	^ classes		! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!SmalltalkCIPharo class	instanceVariableNames: ''!!SmalltalkCIPharo class methodsFor: 'helpers' stamp: 'travisCI 1/27/2016 17:04'!isHeadless	^ Smalltalk isHeadless! !!SmalltalkCIPharo class methodsFor: 'accessing' stamp: 'EstebanLorenzano 1/26/2016 17:36'!platformSymbol	^ #pharo! !