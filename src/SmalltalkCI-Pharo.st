SmalltalkCI subclass: #SmalltalkCIPharo	instanceVariableNames: ''	classVariableNames: ''	poolDictionaries: ''	category: 'SmalltalkCI-Pharo'!!SmalltalkCIPharo methodsFor: 'private' stamp: 'fn 1/31/2016 19:58'!readSTONSpec: aFilename	| reference |	reference := aFilename asFileReference.	projectDirectory := reference parent fullName.	self spec: (reference readStreamDo: [ :stream | 		(Smalltalk at: #SmalltalkCISpec) fromStream: stream ])! !!SmalltalkCIPharo methodsFor: 'private' stamp: 'fn 1/31/2016 19:05'!testRunner 	^ self class isHeadless 		ifTrue: [ Smalltalk at: #CommandLineTestRunner ]		ifFalse: [ Smalltalk at: #HDTestReport ]		! !!SmalltalkCIPharo methodsFor: 'executing' stamp: 'fn 1/31/2016 19:05'!runTests	self testRunner 		runClasses: self classesToTest 		named: 'SmalltalkCI'! !!SmalltalkCIPharo methodsFor: 'accessing' stamp: 'fn 1/31/2016 19:07'!classesToTestFrom: aDictionary	| classes |	classes := super classesToTestFrom: aDictionary.					aDictionary 		at: #packages 		ifPresent: [ :packagesList | | packages commandLineHandler |			packages := Set new.			commandLineHandler := (Smalltalk at: #TestCommandLineHandler) new.			packagesList do: [ :each | 				commandLineHandler addPackagesMatching: each to: packages ].			packages do: [ :each |				| package |				package := (Smalltalk at: #RPackageOrganizer) default packageNamed: each.				classes addAll: package definedClasses ] ].	^ classes		! !"-- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- -- "!SmalltalkCIPharo class	instanceVariableNames: ''!!SmalltalkCIPharo class methodsFor: 'bootstrapping' stamp: 'fn 1/31/2016 18:18'!installSTON	self installSTONWithMetacello! !!SmalltalkCIPharo class methodsFor: 'helpers' stamp: 'travisCI 1/27/2016 17:04'!isHeadless	^ Smalltalk isHeadless! !!SmalltalkCIPharo class methodsFor: 'compatibility' stamp: 'fn 1/31/2016 17:57'!isPlatformCompatible	Smalltalk at: #'SystemVersion' ifPresent: [ :cl |		| versionString |		versionString := cl current version.		^ versionString beginsWith: 'Pharo' ].	^ false! !!SmalltalkCIPharo class methodsFor: 'compatibility' stamp: 'EstebanLorenzano 1/26/2016 17:36'!platformSymbol	^ #pharo! !